{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [],
    "moduleResolution": "Bundler",
    "strict": true
  },
  "include": [
    "app.vue",
    "nuxt.config.ts",
    "components/**/*",
    "composables/**/*",
    "layouts/**/*",
    "middleware/**/*",
    "pages/**/*",
    "plugins/**/*",
    "server/**/*",
    "types/**/*"
  ],
  "exclude": ["api", ".nuxt", "node_modules", ".output"]
}
